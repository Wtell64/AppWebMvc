@model IEnumerable<AspNetMvcBlogv2.Persistence.Entity.Post>

<section class="slider mt-4">
	<div class="container-fluid">
		<div class="row no-gutters">
			<div class="col-lg-12 col-sm-12 col-md-12 slider-wrap">
				
				@foreach(var item in Model)
				{
					@if (item.Images != null && item.Images.Any())
					{
					<div class="slider-item ">
						<div class="slider-item-content">
							<div class="post-thumb mb-4">

									<a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
										<img src="@item.Images.First().ImageUrl" alt="@item.Images.First()" class="img-fluid blog-image .w-100">
										</a>
									
								
							</div>
							<div class="slider-post-content">
								<span class="cat-name text-color font-sm font-extra text-uppercase letter-spacing">Travel</span>
									<h3 class="post-title mt-1"><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></h3>
								<span class=" text-muted  text-capitalize">September 15, 2019</span>
							</div>
						</div>
					</div>
					}
				}
				
			</div>
		</div>
	</div>
</section>