@model AspNetMvcBlogv2.Business.Dtos.PostDtos.CreateOrEditPostDto
@{
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="card">
  <div class="card-title">
    <h2>Edit Post</h2>
  </div>
  <div class="card-body">

    <form method="post">
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label>Id</label>
            <input value="@Model.Id" class="form-control" asp-for=Id readonly />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label>Name</label>
            <input value="@Model.Title" asp-for=Title class="form-control" />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label>Content</label>
            <textarea rows="20" value="@Model.Content" asp-for=Content class="form-control" id="editor"> </textarea>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label>Published Date</label>
            <input id="publishedDate" value="@ViewBag.publishDate" asp-for=PublishedAt class="form-control" />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label>Published Date</label>
            <input id="updateDate" value="@ViewBag.updateDate" asp-for=UpdatedAt class="form-control" />
          </div>
        </div>
      </div>



      <div class="row">
        <div class="col-lg-6">
          <div class="form-group" style="margin-top:10px">
            <button type="submit" asp-area="Admin" asp-controller="Blog" asp-action="Edit" class="btn btn-success">Save</button>
            <a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="btn btn-danger">Cancel</a>
          </div>
        </div>
      </div>
    </form>



  </div>

</div>

@section Scripts{
  <script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/classic/ckeditor.js"></script>

  <script>
    ClassicEditor
      .create(document.querySelector('#editor'))
      .catch(error => {
        console.error(error);
      });


  </script>
    
  <script>
    $(document).ready(function () {
      $('#publishedDate').datepicker({
        dateFormat: 'yy-mm-dd',
      });
    });

    $(document).ready(function () {
      $('#updateDate').datepicker({
        dateFormat: 'yy-mm-dd',
      });
    });
  </script>


}