@model AspNetMvcBlogv2.Business.Dtos.CategoryDtos.CreateOrEditCategoryDto
@{
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="card">
  <div class="card-title">
    <h2>Edit Category</h2>
  </div>
  <div class="card-body">

    <form method="post">
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label>Id</label>
            <input value="@Model.Id" class="form-control" asp-for =Id readonly />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label>Name</label>
            <input value="@Model.Name" asp-for =Name class="form-control" />
          </div>
        </div>
      </div>



      <div class="row">
        <div class="col-lg-6">
          <div class="form-group" style="margin-top:10px">
            <button type="submit" asp-area="Admin" asp-controller="Category" asp-action="Edit" class="btn btn-success">Save</button>
            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-danger">Cancel</a>
          </div>
        </div>
      </div>
    </form>

    

  </div>

</div>
